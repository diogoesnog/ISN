<%- include('partials/header') %>

<div class="modal fade" id="editProfile" tabindex="-1" role="dialog" aria-labelledby="title" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="title">Editing Profile Picture</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="dropzone" id="settings-dropzone">
                </div>
                <form action="/settings/picture-update" method="POST" class="settings-dropzone"
                    enctype="multipart/form-data">
                    <div class="fallback">
                        <input name="file" type="file" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="save-profile-picture">Save changes</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="changePasswordForm" tabindex="-1" role="dialog" aria-labelledby="title" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="title">Change Password</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/settings/change-password" method="post">
                    <div class="form-label-group">
                        <label for="password">New Password</label>
                        <input type="password" name="password" id="password" class="form-control" autofocus>
                    </div>
                    <button class="btn btn-lg btn-primary" id="changePasswordButton">Save</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row h-100">
        <div class="col-sm-3 d-none d-lg-block border-right">
            <div data-toggle="tooltip" data-placement="top" title="Click to change picture" alt="Change Picture"
                id="edit-profile" class="circle-avatar" style="background-image:url(<%- data.photo %>)"></div>
            <hr>

        </div>
        <div class="col-lg-9">
            <h1>Settings</h1>
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a href="#account" class="nav-link active" data-toggle="tab">Account</a>
                </li>
                <li class="nav-item">
                    <a href="#social" class="nav-link" data-toggle="tab">Social</a>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane fade show active" id="account">
                    <h4 class="mt-2">Account</h4>

                    <form id="update-user-info">
                        <div class="form-label-group">
                            <label for="fullName">Full Name</label>
                            <input id="fullName" id="fullName" class="form-control" placeholder="Full Name"
                                value="<%= data.fullName %>" autofocus required>
                        </div>
                        <div class="form-label-group">
                            <label for="bio">About</label>
                            <div class="quill-composer" id="quill-settings-about">
                                <%- data.bio %>
                            </div>
                            <input name="bio" id="bio" value="" hidden>
                        </div>

                        <div class="form-label-group">
                            <label for="email">Email</label>
                            <input type="email" name="email" id="email" class="form-control" placeholder="E-mail"
                                value="<%= data.email %>" autofocus required>
                        </div>

                        <div>
                            <label for="courses">Course</label>
                            <input type="text" name="courses" id="courses" value="<%= data.courses %>"
                                placeholder="Courses" autofocus>
                        </div>
                        <div class="">
                            <div id="change-password" class="btn btn-link">Change Password</div>
                        </div>

                        <input name="userId" type="text" hidden value="<%= data._id %>">
                        <button class="btn btn-lg btn-primary" type="submit">Save</button>
                    </form>
                </div>


                <div class="tab-pane fade" id="social">
                    <h4 class="mt-2">Social</h4>
                    <form id="update-user-info-social">

                        <div class=" form-label-group">
                            <label for="instagram">Instagram</label>
                            <input type="text" name="instagram" id="instagram" class="form-control"
                                placeholder="Instagram URL" value="<%= data.instagram %>" autofocus>
                        </div>


                        <div class="form-label-group">
                            <label for="twitter">Twitter</label>
                            <input type="text" name="twitter" id="twitter" class="form-control"
                                placeholder="Twitter URL" value="<%= data.twitter %>" autofocus>
                        </div>

                        <div class="form-label-group">
                            <label for="linkedIn">LinkedIn</label>
                            <input type="text" name="linkedIn" id="linkedIn" class="form-control"
                                placeholder="LinkedIn URL" value="<%= data.linkedIn %>" autofocus>
                        </div>

                        <div class="form-label-group">
                            <label for="github">GitHub</label>
                            <input type="text" name="github" id="github" class="form-control" placeholder="GitHub URL"
                                value="<%= data.github %>" autofocus>
                        </div>

                        <div class="form-label-group">
                            <label for="facebook">Facebook</label>
                            <input type="text" name="facebook" id="facebook" class="form-control"
                                placeholder="Facebook URL" value="<%= data.facebook %>" autofocus>
                        </div>


                        <input name="userId" type="text" hidden value="<%= data._id %>">
                        <button class="btn btn-lg btn-primary" type="submit">Save</button>

                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>